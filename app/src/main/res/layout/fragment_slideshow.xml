<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorletras5"
        android:orientation="vertical"
        android:padding="25dp"
        tools:context=".Registro">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:src="@drawable/landscape"
            android:transitionName="imgregistroTrans" />

        <TextView
            android:id="@+id/lblwelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/advent_pro_bold"
            android:text="¿Sin conexión?"
            android:textColor="@color/colorletras6"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtregistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/advent_pro_bold"
            android:text="Descarga el manual básico en caso de no tener señal, lograremos ayudarte"
            android:textColor="@color/colorletras2"
            android:textSize="19dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            //SERVICIOS

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="right"
                app:srcCompat="@android:drawable/ic_delete" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnserv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/advent_pro_bold"
                android:text="Descargar" />




        </LinearLayout>


        //LAYOUTFINAL
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>